// Variable declaration.
let x = 10, y = PI * 2;

/**
 * Function declaration.
 */
fn square(x) {
  return x * x;
}

/**
 * Lambda function.
 */
let square = (x) -> {
  return x * x;
};

/**
 * Function call.
 */
square(2);

/**
 * do-while loop.
 */
do {
  foo += x;
  x -= 1;
} while (x > 0);

/**
 * while-loop.
 */
while (x < 10) {
  foo -= x;
  x += 1;
}

/**
 * for-loop.
 */
for (let i = 0; i < 10; i += 1) {
  foo += i;
}

/**
 * break/continue.
 */
for (;;) {
  x += 1;
  if (x < 10) {
    continue;
  }
  x = 0;
  break;
}

